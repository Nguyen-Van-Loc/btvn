<form action="/themsanpham" method="post">
    <div class="form-group">
        <label for="tensp" style="color: gray;"> Ten </label>
        <input type="text" name="tensp" class="form-control" id="tensp" required
            placeholder="Ten">
    </div>
    <div class="form-group">
        <label for="giasp" style="color: gray;"> Gia </label>
        <input type="number" name="giasp" class="form-control" id="giasp"
        required placeholder="Gia">

    <div class="form-group">
        <label for="soluong" style="color: gray;"> So luong </label>
        <input type="number" name="soluong" id="soluong" class="form-control" required placeholder="soluong">
    </div>
    <div class="form-group">
        <label for="khuyenmai" style="color: gray;"> Khuyen mai </label>
        <input type="number" name="khuyenmai" id="khuyenmai" class="form-control" required
            placeholder="khuyenmai">
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary"
            data-bs-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>