
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Update</h1>
      <form action="/{{sanpham._id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="tensp">Name</label>
          <input type="text" class="form-control" id="tensp"   value="{{sanpham.tensp}}" placeholder="Enter your name" required name="tensp">
        </div>
        <div class="form-group">
          <label for="giasp">Gia</label>
          <input type="number" class="form-control" id="giasp" value="{{sanpham.giasp}}" placeholder="Enter your email" required name="giasp">
        </div>
        <div class="form-group">
          <label for="soluong">So luong</label>
          <input type="number" class="form-control" id="soluong" value="{{sanpham.soluong}}" placeholder="Enter your email" required name="soluong">
        </div>
        <div class="form-group">
          <label for="khuyenmai">Khuyen mai</label>
          <input type="number" class="form-control" id="khuyenmai" value="{{sanpham.khuyenmai}}" placeholder="Enter your email" required name="khuyenmai">
        </div>
       
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>