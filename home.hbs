<div class="container py-3" data-bs-theme="dark">
    
    <div class="row">
        <div class="col-md-12" style="font-size: 20px;margin-top:20px">
            Danh sách San Pham
            <hr>
        </div>
        <div class="col-md-9">
            <!-- Button trigger modal -->
            <a href="./themsanpham"><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Thêm San Pham
            </button></a>
            <!-- Modal -->
        </div>
    </div>
    <hr>

    <div class="col-md-13" style="margin-top: 20px;">
        <table class="table text-left table-dark  align-middle">
            <thead>
                <tr>
                    <th class="col-md-1" scope="col">Ten</th>
                    <th class="col-md-4" scope="col">Gia</th>
                    <th class="col-md-2" class="text-center" scope="col">So luong</th>
                    <th class="col-md-2" class="text-center" scope="col">Khuyen mai</th>
                    <th class="col-md-2" class="text-center" scope="col">Chuc nang</th>
                </tr>
            </thead>

            <tbody>
                {{#each sanpham}}
                <tr>
                    <th scope="row">{{this.tensp}}</th>
                    <td>{{this.giasp}}</td>
                    <td>{{this.soluong}}</td>
                    <td>{{this.khuyenmai}}</td>
                    <td>
                        <button type="button" class="btn btn-outline-primary" style="margin-right: 10px;"><a
                                style="text-decoration: none;" href="/{{this._id}}/edit/">Sửa</a> </button>
                        <button type="button" class="btn btn-outline-primary"><a href="/{{this._id}}"
                                style="text-decoration: none;">Xoa</a></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>

</div>